{
    "name": "ubuntu_user_artifacts",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached", 
    "workspaceFolder": "/workspace",
    "postCreateCommand": "bash /workspace/deploy_artifacts",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "Remisa.shellman",
                "janjoerke.jenkins-pipeline-linter-connector"
            ]
        }
    },
    "mounts": [
        "source=${localEnv:HOME}/.ssh/deploy_keys_github/shell_setup/id_rsa,target=/home/ubuntu/.ssh/deploy_keys_github/shell_setup/id_rsa,type=bind,readonly",
        "source=${localEnv:HOME}/.ssh/config,target=/home/ubuntu/.ssh/config,type=bind,readonly"
   ],
   "runArgs": [
        "--memory=768m",
        "--memory-reservation=512m",
        "--cpus=1",
        // "--security-opt", "apparmor=unconfined", "--cap-add=SYS_ADMIN", "--device=/dev/sdf1", "--device=/dev/sdg", "--device=/dev/sdh1"
    ]
}