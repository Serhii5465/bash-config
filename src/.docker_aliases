alias dockbuild='docker build'
alias dockrun='docker run'

alias dps='docker ps'

alias dpull='docker pull'

alias dcup='docker compose up'
alias dcbuild='docker compose build'

alias dcupv='docker compose --verbose up'
alias dcbuildv='docker compose --verbose build'

alias dcdown="docker compose down"
alias dcdownv="docker compose --verbose down"

alias dcupbuild="docker compose up --build"
alias dcupbuilddet="docker compose up --build -d"

alias dcstop="docker compose stop"

dockbash(){
    docker exec -it $1 bash
}